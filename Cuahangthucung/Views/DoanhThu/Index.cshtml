
@{
    ViewBag.Title = "Monthly Revenue";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2 style="text-align:center; color:red; font-weight:bold">Monthly Revenue<br />(Đơn vị: Triệu VNĐ)</h2>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<canvas id="revenueChart" width="100" height="70"></canvas>

<script>
    var ctx = document.getElementById('revenueChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Encode(ViewBag.MonthsFalse)),
            datasets: [{
                label: 'Revenue (Chưa Thanh Toán)',
                data: @Html.Raw(Json.Encode(ViewBag.RevenuesFalse)),
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'Revenue (Đã Thanh Toán)',
                data: @Html.Raw(Json.Encode(ViewBag.RevenuesTrue)),
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
